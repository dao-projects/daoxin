{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "format": "prettier --write .",
    "build": "npm run build --workspaces",
    "_build": "make build",
    "ts": "node scripts/tsconfig.js && tsc"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --format=codeframe"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.25",
    "prettier": "^2.6.2"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  }
}